<section class="about-support">
  <div class="container">
    <div class="top-box">
  {% if section.settings.heading != blank %}
  <h2 class="heading">{{section.settings.heading}}</h2>
  {% endif %}
  {% if section.settings.detail != blank %}
  <p class="detail">{{section.settings.detail}}</p>
  {% endif %}
    </div>
    <div class="bottom-box">
      <div class="bottom-container col-12 col-lg-8  col-md-12 ">
        <div class="left-box col-12 col-sm-6 col-md-6">
          <h5>LIVE SUPPORT AVAILABILITY</h5>
          <div class="flex-box">
          <div class="left-content">
            
            <div class="icon-text"><img data-swift-lazy="1" loading="lazy" src="{{'supporticon-rebrand.png' | file_url}}"><h6>Phone & Chat</h6></div>
            
          </div>
          <div class="right-content">
            <div class="right-content-top">
            <h6>Monday - Friday</h6><p>9:00am - 8:00pm</p><p>Eastern</p>
            </div>
            <div class="right-content-top">
            <h6>Saturday</h6><p>10:00am - 6:00pm</p><p>Eastern</p>
            </div>
          </div>
      </div>
        </div>
        <div class="right-box col-12 col-sm-6 col-md-6">
          <h5>OTHER SUPPORT</h5>
          <div class="top-main">
          <div class="top-box">
            <div class="icon-text">
              <img data-swift-lazy="1" loading="lazy" src="{{'supportquestion-rebrand.png' | file_url}}"><h6>FAQ's</h6>
            </div>
             <div class="btn-box">
              <a class="visit-btn"  href="/pages/faq">visit</a></div>
          </div>
          <div class="bottom-box">
            <div class="flex-box">
            <div class="icon-text">
              <img data-swift-lazy="1" loading="lazy" src="{{'Support-Ticket-rebrand.png' | file_url}}"><h6>Support Ticket</h6>
            </div>
              <div class="btn-box">
            <a class="visit-btn" href="/pages/help">visit</a>
              </div>
            </div>
            <p>During business hours, we typically reply within the hour.</p>
          </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
  {
    "name": "About support",
    "settings": [
{
	"type":"text",
	"id": "heading",
	"label" : "Heading"
},
{
	"type":"richtext",
	"id": "detail",
	"label" : "Detail"
}


],
"presets":[{
 "name": "About support",
    "category": "About page"
}
]
  }
{% endschema %}

