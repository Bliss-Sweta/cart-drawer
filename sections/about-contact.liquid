{% assign image = section.settings.image | img_url:'1920x' %}
<div class="about_contact-bg" style="background-image:url('{{image}}');">
  <section class="about-contact container">
    <div class="contact-container">
      <div class="left-box">
        {% if section.settings.heading != blank %}
        <h3 class="heading">{{section.settings.heading}}</h3>
        {% endif %}
        {% if section.settings.heading != blank %}
        <p class="detail">{{section.settings.detail}}</p>
        {% endif %}
      </div>
      <div class="right-box">
        {% if section.settings.heading != blank %}
        <div class="phone-box">
        <img data-swift-lazy="1" loading="lazy" class="phone-icon" src="{{'phone-icon-2-rebrand.png' | file_url}}"><a href="tel:{{section.settings.number}}">{{section.settings.number}}</a>
        </div>
        {% endif %}
      </div>
    </div> 
  </section>
</div>

{% schema %}
  {
    "name": "About contact",
    "settings": [{
	"type":"image_picker",
	"id": "image",
	"label" : "Image"
},
{
	"type":"text",
	"id": "heading",
	"label" : "Heading"
},
{
	"type":"richtext",
	"id": "detail",
	"label" : "Detail"
},
{
	"type":"text",
	"id":"number",
	"label":"Phone number"
}

],
"presets":[{
 "name": "About contact",
    "category": "About page"
}
]
  }
{% endschema %}

